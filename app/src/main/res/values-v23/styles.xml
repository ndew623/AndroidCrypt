<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="colorPrimary">@color/darkThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkThemeColorPrimaryDark</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:windowBackground">@color/darkThemeBackground</item>
        <item name="android:textColorPrimary">@color/darkThemeTextColor</item>
        <item name="android:textColorHint">@color/darkThemeTextColorHint</item>
        <item name="android:statusBarColor">@color/darkThemeColorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>